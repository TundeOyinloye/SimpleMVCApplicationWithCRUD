@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row p-4">
       
        <div class="col-9">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-3" style="float:right">
            <a asp-asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i>&nbsp; New Category</a>
        </div>
    </div>
    <br /><br />



<table class= "table  table-bordered table-striped" style="width:100%">

    <thead>

        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>

</table>


</div>